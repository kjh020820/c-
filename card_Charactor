void industry_of_Minister::showEffectPreview() {
    switch (card_num11)
    {
    case 0:
        std::cout << "선택지 [1]  :  지지율에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  알수없음 " << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향, 군사력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향 " << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  군사력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향 군사력에 작은 영향, 경제력에 작은 영향" << std::endl;
        break;
    case 3:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향, 군사력에 작은 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  알수없음 " << std::endl;
        break;
    case 4:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향" << std::endl;
        break;
    case 5:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 군사력에 큰 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    case 6:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향 " << std::endl;
        break;
    }



}

void General::applyEffect(Player& player, int choice) {
    switch (card_num12)
    {
    case 0:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {
            player.military -= 10;
            cout << "효과 :  군사력[-10] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.military += 10;
            player.economy -= 25;
            cout << "효과 :  군사력[+10], 경제력[-25] " << endl;
        }
        else {
            player.military -= 20;
            cout << "효과 :  군사력[-20]" << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.military -= 15;
            player.economy -= 15;
            player.public_opinion += 15;
            cout << "효과 :  군사력[-15], 경제력[+15], 지지율[+15] " << endl;
        }
        else {
            player.diplomacy -= 10;
            player.economy -= 10;
            player.public_opinion -= 10;
            player.military -= 10;
            cout << "효과 :  외교력[-15], 군사력[-10], 지지율[-10] 군사력[-10]" << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.military -= 35;
            cout << "효과 :  군사력[-35] " << endl;
        }
        else {
            player.public_opinion -= 5;
            cout << "효과 :  지지율[-5] " << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.military += 25;
            player.economy -= 15;
            cout << "효과 :  군사력[+25], 경제력[-15] " << endl;
        }
        else {
            player.military -= 15;
            cout << "효과 :  군사력[-15] " << endl;
        }
        break;
    case 5:
        if (choice == 1) {
            player.military += 25;
            player.economy -= 15;
            cout << "효과 :  군사력[+25], 경제력[-15] " << endl;
        }
        else {
            player.military -= 30;
            cout << "효과 :  군사력[-30] " << endl;
        }
        break;
    case 6:
        if (choice == 1) {
            player.military -= 5;
            player.economy += 15;
            cout << "효과 :  군사력[-5], 경제력[+15] " << endl;
        }
        else {
            player.public_opinion -= 5;
            player.economy -= 10;
            cout << "효과 :  지지율[-5], 경제력[-10] " << endl;
        }
        break;
    case 7:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {
            player.public_opinion -= 5;
            cout << "효과 :  지지율[-5] " << endl;
        }
        break;
    case 8:
        if (choice == 1) {
            player.diplomacy += 10;
            player.economy -= 20;
            player.military -= 20;
            player.public_opinion -= 15;
            cout << "효과 :  외교력[-15], 경제력[-20], 군사력[-20], 지지율[-15] " << endl;
        }
        else {
            player.public_opinion += 20;
            player.military -= 20;
            cout << "효과 :  지지율[+20], 군사력[-20] " << endl;
        }
        break;
    case 9:
        if (choice == 1) {
            player.military += 15;
            cout << "효과 :  군사력[+15] " << endl;
        }
        else {
            player.military -= 20;
            cout << "효과 :  군사력[-20] " << endl;
        }
        break;
    case 10:
        if (choice == 1) {
            player.military += 10;
            player.economy -= 15;
            cout << "효과 :  군사력[+10], 경제력[-15] " << endl;
        }
        else {
            player.public_opinion -= 30;
            cout << "효과 :  지지율[-30] " << endl;
        }
        break;
    case 11:
        if (choice == 1) {
            player.diplomacy -= 25;
            player.economy -= 25;
            player.public_opinion -= 25;
            player.military -= 25;
            cout << "효과 :  외교력[-25], 경제력[-25], 지지율[-25], 군사력[-25]" << endl;
        }
        else {
            player.diplomacy -= 25;
            player.public_opinion -= 25;
            player.military -= 25;
            cout << "효과 :  외교력[-25], 지지율[-25], 군사력[-25]" << endl;
        }
        break;
    case 12:
        if (choice == 1) {
            player.diplomacy -= 10;
            player.military -= 10;
            player.public_opinion -= 10;
            player.economy -= 25;
            cout << "효과 :  외교력[-10], 군사력[-10], 지지율[-10] 경제력[-25]" << endl;
        }
        else {
            player.diplomacy -= 10;
            player.military -= 10;
            player.public_opinion -= 25;
            cout << "효과 :  외교력[-10], 군사력[-10], 지지율[-25]" << endl;
        }
        break;
    case 13:
        if (choice == 1) {
            player.military += 10;
            player.economy -= 20;
            cout << "효과 :  군사력[+10], 경제력[-20] " << endl;
        }
        else {
            player.military -= 10;
            player.economy += 20;
            cout << "효과 :  군사력[-10], 경제력[+20] " << endl;
        }
        break;
    case 14:
        if (choice == 1) {
            player.public_opinion += 10;
            player.military -= 20;
            cout << "효과 :  지지율[+10], 군사력[-20] " << endl;
        }
        else {
            player.diplomacy -= 10;
            player.military += 20;
            cout << "효과 :  외교력[-10], 군사력[+20]" << endl;
        }
        break;
    case 15:
        if (choice == 1) {
            player.military += 20;
            player.economy -= 25;
            cout << "효과 :  군사력[+20], 경제력[-25] " << endl;
        }
        else {
            player.military -= 15;
            player.economy += 25;
            cout << "효과 :  군사력[-15], 경제력[+25] " << endl;
        }
        break;
    }


}

