void doctor::showEffectPreview() {
    switch (card_num10)
    {
    case 0:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 군사력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향" << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 군사력에 작은 영향, 경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 군사력에 작은 영향" << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향" << std::endl;
        break;
    }



}
void industry_of_Minister::applyEffect(Player& player, int choice) {
    switch (card_num11)
    {
    case 0:
        if (choice == 1) {
            player.public_opinion -= 15;
            cout << "효과 :  지지율에 작은 영향 " << endl;
        }
        else {
            cout << "효과없음 " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.public_opinion += 5;
            player.military -= 5;
            player.diplomacy -= 5;
            cout << "효과 :  외교력[-5], 지지율[+5], 군사력[-5] " << endl;
        }
        else {
            player.military += 5;
            cout << "효과 :  군사력[+5] " << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.military -= 15;
            cout << "효과 :  군사력[-15] " << endl;
        }
        else {
            player.military += 10;
            player.diplomacy -= 10;
            player.economy -= 10;
            player.public_opinion -= 10;

            cout << "외교력[-10], 지지율[-10] 군사력[+10], 경제력[-10]" << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.public_opinion -= 20;
            player.military -= 15;
            player.diplomacy -= 10;
            player.economy += 45;
            cout << "효과 :  외교력[-10], 지지율[-20], 군사력[-15], 경제력[+45]  " << endl;
        }
        else {
            cout << "효과 :   효과없음" << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.public_opinion += 20;
            player.economy -= 20;
            cout << "효과 :  지지율[+20], 경제력[-20] " << endl;
        }
        else {
            player.diplomacy += 20;
            cout << "효과 :  외교력[+20] " << endl;
        }
    case 5:
        break;
        if (choice == 1) {
            player.public_opinion += 10;
            player.military += 30;
            player.economy -= 15;
            cout << "효과 :  지지율[+10], 군사력[+30], 경제력[-15] " << endl;
        }
        else {
            player.public_opinion -= 15;
            player.economy += 20;
            cout << "효과 :  지지율[-15], 경제력[+20] " << endl;
        }
        break;
    case 6:
        break;
        if (choice == 1) {
            player.public_opinion += 20;
            player.economy += 30;
            cout << "효과 :  지지율[+20], 경제력[+30] " << endl;
        }
        else {
            player.public_opinion -= 15;
            cout << "지지율[-15] " << endl;
        }
        break;
    }


}

void industry_of_Minister::showCard() {
    card_num11 = rand() % 7;

    switch (card_num11)
    {
    case 0:
        cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
        cout << "~~~~~~~~~~~~~~~~@@@@@@@@~~~~~~~~~~~~~~~~\n";
        cout << "~~~~~~~~~~~~;***;;;;;;;;***;~~~~~~~~~~~~\n";
        cout << "~~~~~~~~~~~~*@@@        @@@*~~~~~~~~~~~~\n";
