        cout << ";;;;;*######*.             ----=##=;;;;;\n";
        cout << ";;;;*$$#####$!.           ,----=###$;:;;\n";
        cout << ";;:;$#########=.         ,-----=####;:;;\n";
        cout << ";;;;$##########$.       -------=####;:;;\n";
        cout << ";;;;$############-    .--------=####;::;\n";
        cout << ";;:;$#############;  ,---------=####;;:;\n";
        cout << ";;:;$#############$*,----------=####;;:;\n";
        cout << ";:;;$##############$-----------$####;;;;\n";
        cout << "재벌: 외국 기업이 처음 보는 제품을 팔고 있습니다. \n똑같이 따라 만들면 어떨까요? " << endl << "1: 좋은 생각이군. !" << endl << "2: 별것도 아닌일에 신경 쓰지 말게" << endl; break;
    case 4:         cout << ";:;;;;:;;;;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;~~;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;;;:-. -;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;;:-.-- -:;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;:,.--~- ,:;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;:..----~~..:;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;: ,---. ~~~, :;:;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~.----    ~~~~ ::;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~----.     ~~~~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;:---.        ,~~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;~--.          .~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;:-.            .~;;;;;;;;;;;;\n";
        cout << ";::;;;;;;;;;-    ~    -    ~;;;;;;;;;;;;\n";
        cout << ";::;;;;;;;;;-    =.   =    ~;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;-.   =.   =    ~;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;-    *.   *    ~;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;-    .         ~:;;;;;;;;;;;\n";
        cout << ";;;;;;;;:;;;-.             ~;;;;;;;;;;;;\n";
        cout << ";;;;;;;;;:=$!              --~;;;;;;;;;;\n";
        cout << ";;;;;;;;;*##!              ,--~:;::;;;;;\n";
        cout << ";;;;;;;;!$##!.             ,---!;:;;;;;;\n";
        cout << ";;;;;;;!$###!.             ,---==;;;;;;;\n";
        cout << ";;;;;;*$####!.             ,---=#=;;::;;\n";
        cout << ";;;;;*######*.             ----=##=;;;;;\n";
        cout << ";;;;*$$#####$!.           ,----=###$;:;;\n";
        cout << ";;:;$#########=.         ,-----=####;:;;\n";
        cout << ";;;;$##########$.       -------=####;:;;\n";
        cout << ";;;;$############-    .--------=####;::;\n";
        cout << ";;:;$#############;  ,---------=####;;:;\n";
        cout << ";;:;$#############$*,----------=####;;:;\n";
        cout << ";:;;$##############$-----------$####;;;;\n";
        cout << "재벌: 각하는 제 조언을 하나도 들어 주시지 않는군요. \n저를 신용하지 못하십니까? " << endl << "1: 뭐... 딱히" << endl << "2: 나는 자네를 매우 신뢰하고 있다네" << endl; break;
    }
}
void Rich::showEffectPreview() {
    switch (card_num13)
    {
    case 0:
        std::cout << "선택지 [1]  :  경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향" << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  경제력에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향" << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 경제력에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  경제력에 작은 영향, 지지율에 작은 영향" << std::endl;
        break;
    case 3:
        std::cout << "선택지 [1]  :  경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  경제력에 작은 영향" << std::endl;
        break;
    case 4:
        std::cout << "선택지 [1]  :  외교력에 큰 영향, 지지율에 큰 영향, 군사력에 큰 영향, 경제력에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  경제력에 큰 영향" << std::endl;
        break;
    }


}
void Minister_of_Finance::applyEffect(Player& player, int choice) {
    int effect1 = 0;
    if (choice == 1) {
        player.economy += 50;
        cout << "효과 :  경제력[+50] " << effect1 << endl;
    }
    else {
        cout << "효과없음 " << effect1 << endl;
    }

}

