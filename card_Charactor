void Minister_of_Government::showEffectPreview() {
    switch (card_num15)
    {
    case 0:
        std::cout << "선택지 [1]  :  지지율 에 작은 영향, 군사력 에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  지지율 에 작은 영향 。" << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  알수없음 " << std::endl;
        std::cout << "선택지 [2]  :  알수없음" << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 경제력에 작은 영향" << std::endl;
        break;
    case 3:
        std::cout << "선택지 [1]  :  알수없음 " << std::endl;
        std::cout << "선택지 [2]  :  알수없음" << std::endl;
        break;
    }


}

void Minister_of_Environment::applyEffect(Player& player, int choice) {
    if (choice == 1) {
        player.public_opinion += 30;
        player.economy -= 10;
        cout << "효과 :  지지율[+30], 경제력[-10] " << endl;
    }
    else {
        player.public_opinion -= 35;
        cout << "효과 :  지지율[-35] " << endl;
    }

}

