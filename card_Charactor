void an_aide::showEffectPreview() {
    switch (card_num5)
    {
    case 0:
        cout << "선택지 [1]  :  군사력에 작은 영향, 외교력에 작은 영향, 지지율에 작은 영향, 경제력에 작은 영향 " << endl;
        cout << "선택지 [2]  :  군사력에 작은 영향, 외교력에 큰 영향, 경제력에 작은 영향" << endl;
        break;
    case 1:
        cout << "선택지 [1]  :  외교력에 작은 영향 " << endl;
        cout << "선택지 [2]  :  외교력에 작은 영향 " << endl;
        break;
    case 2:
        cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향 " << endl;
        cout << "선택지 [2]  :  지지율에 작은 영향 " << endl;
        break;
    case 3:
        cout << "선택지 [1]  :  군사력에 작은 영향, 외교력에 작은 영향, 지지율에 작은 영향, 경제력에 작은 영향" << endl;
        cout << "선택지 [2]  :  군사력에 작은 영향, 지지율에 작은 영향" << endl;
        break;
    case 4:
        cout << "선택지 [1]  :  군사력에 작은 영향, 지지율에 작은 영향" << endl;
        cout << "선택지 [2]  :  군사력에 작은 영향, 지지율에 작은 영향 경제력에 작은 영향" << endl;
        break;
    case 5:
        cout << "선택지 [1]  :  군사력에 작은 영향, 지지율에 큰 영향, 경제력에 작은 영향, 외교력에 작은 영향" << endl;
        cout << "선택지 [2]  :  군사력에 작은 영향, 지지율에 작은 영향, 외교력에 작은 영향" << endl;
        break;
    case 6:
        cout << "선택지 [1]  :  군사력에 작은 영향, 지지율에 작은 영향, 외교력에 작은 영향" << endl;
        cout << "선택지 [2]  :  지지율에 작은 영향, 경제력에 작은 영향" << endl;
        break;
    case 7:
        cout << "선택지 [1]  :  군사력에 큰 영향, 외교력에 작은 영향 " << endl;
        cout << "선택지 [2]  :  외교력에 큰 영향" << endl;
        break;
    }

}

// 경제력 카드 구현
void mayor::applyEffect(Player& player, int choice) {
    if (choice == 1) {
        player.economy -= 35;
        player.public_opinion += 10;
        cout << "효과 :  경제력[-35]" << ", 지지율[+10]" << endl;
    }
    else {
        player.economy += 15;
        player.public_opinion -= 15;
        player.military -= 15;
        cout << "효과 :  경제력[+15]" << ", 지지율[-15], 군사력[-15] " << endl;
    }
}

void mayor::showCard() {
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << ":~~~~~~~~~$$=$$$$$$$$######$:$~~~~~~~~~~~\n";
    cout << ":~~~~~~;$$$$$$$$$$$$$############*~~~~~~\n";
    cout << ":~~~~~~=$$$$$$$$$$$$$############$~~~~~~\n";
    cout << ":~~~~~;$$$$$$$$$$$$=,!############!~~~~~\n";
    cout << ":~~~~~!$$$$$$$$$$$*,..:###########=~~~~~\n";
    cout << ":~~~~~;$$$$$$$$$$!,....:##########!~~~~~\n";
    cout << ":~~~~~:$$$$$$$$$;.... ..;#########:~~~~~\n";
    cout << ":~~~~~~$$$$$$$$;.....    *########~~~~~~\n";
    cout << ":~~~~~~*$$****;......    .====###$~~~~~~\n";
    cout << ":~~~~~~!*............    .     =#*~~~~~~\n";
    cout << ":~~~~~~~=............    .      #:~~~~~~\n";
    cout << ":~~~~~~~:............    .      ;~~~~~~~\n";
    cout << ":~~~~~~~~-........~.. ..       ,~~~~~~~~\n";
    cout << ":~~~~~~~~~,......,:.. ,,       ~~~~~~~~~\n";
    cout << ":~~~~~~~~~~......,:.. ,, .    ,~~~~~~~~~\n";
    cout << ":~~~~~~~~~~-,....,~.. ,.     ,~~~~~~~~~~\n";
    cout << ":~~~~~~~~~~;~........ ..     :;:~~~~~~~~\n";
    cout << ":~~~~~~~~*;;~,.......      . ;::;~~~~~~~\n";
    cout << ":~~~~~~:*!;;~,.......      . -:::;~~~~~~\n";
    cout << ":~~~~~:!!;;;-........        .::::;~~~~~\n";
    cout << ":~~~~:!!;!!!,,.......         :::::;~~~~\n";
    cout << ":~~~:!;;;;;!,,.......         :::::::~~~\n";
    cout << ":~~~!!;;;;;!,,,......   .     :::::::~~~\n";
    cout << ":~~~!!!;;;;!,,,,,....         :::::::~~~\n";
    cout << ":~~~!;;;;;;!-,,,,,,..        .:::::::~~~\n";
    cout << ":~~~!;;;;;;;;-,,,,,,..      .::::::::~~~\n";
    cout << ":~~~!;;;;;;;;;,,,,,,.      .:::::::::~~~\n";
    cout << ":~~~!!;;;;;;;;;.,,,,.     .::::::::::~~~\n";
    cout << ";~~~!!;;;!!!!!;;,,,,.    .:::::::::::~~~\n";
    cout << "시장: 대지진으로 수도에 막대한 피해가 났습니다!\n 군대에 지시를 내려 주십시오!" << endl << "1: 어서 피해자를 구출하도록!" << endl << "2: 약탈 행위를 단속하도록.." << endl;
}
void mayor::showEffectPreview() {
    std::cout << "선택지 [1]  :  지지율에 작은 영향 " << ", 경제력에 큰 영향 " << std::endl;
    std::cout << "선택지 [2]  :  지지율에 작은 영향 " << ", 경제력에 작은 영향, 군사력에 작은 영향 " << std::endl;
}

void Minister_of_Foreign_Affairs::applyEffect(Player& player, int choice) {
    switch (card_num6)
    {
    case 0:
        if (choice == 1) {
            player.economy -= 10;
            player.diplomacy += 15;
            player.public_opinion -= 10;
            cout << "효과 :  경제력[-10], 지지율[-10] 외교력[+15] " << endl;
        }
        else {
            player.public_opinion += 15;
            player.diplomacy -= 10;
            cout << "효과 :  외교력[-10], 지지율[+15] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.economy -= 35;
            player.diplomacy -= 35;
            player.public_opinion -= 35;
            cout << "효과 :  경제력[-25], 지지율[-35], 외교력[-35] " << endl;
        }
        else {
            player.military -= 35;
            player.diplomacy -= 35;
            player.public_opinion -= 35;
            cout << "효과 :  군사력[-35], 지지율[-35], 외교력[-35] " << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.economy -= 25;
            player.military += 25;
            player.public_opinion += 10;
            cout << "효과 :  경제력[-25], 군사력[+25], 지지율[+10]" << endl;
        }
        else {
            player.public_opinion -= 25;
            cout << "효과 :  지지율[-25] " << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.economy += 15;
            player.diplomacy += 30;
            cout << "효과 :  경제력[+15], 외교력[+30]" << endl;
        }
        else {
            player.diplomacy -= 15;
            cout << "효과 :  외교력[-15]" << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.public_opinion -= 10;
            cout << "효과 :  지지율[-10] " << endl;
        }
        else {
            player.economy -= 15;
            player.public_opinion += 10;
            cout << "효과 :  경제력[-15], 지지율[+10] " << endl;
        }
        break;
    case 5:
        if (choice == 1) {
            player.diplomacy += 20;
            player.public_opinion -= 15;
            cout << "효과 :  외교력[+20], 지지율[-15] " << endl;
        }
        else {
            player.public_opinion += 10;
            player.diplomacy -= 15;
            cout << "효과 :  지지율[+10], 외교력[-15] " << endl;
        }
        break;
    case 6:
        if (choice == 1) {
            player.economy += 35;
            player.diplomacy += 35;
            player.military -= 10;
            player.public_opinion -= 15;
            cout << "효과 :  경제력[+35], 외교력[+35], 군사력[-10], 지지율[-15] " << endl;
        }
        else {
            player.economy -= 15;
            player.diplomacy -= 25;
            player.military += 10;
            player.public_opinion += 10;
            cout << "효과 :  경제력[-15], 외교력[-25], 군사력[+10], 지지율[+10] " << endl;
        }
        break;
    case 7:
        if (choice == 1) {
            player.economy -= 10;
            player.diplomacy += 10;
            player.public_opinion += 15;
            cout << "효과 :  경제력[-10], 외교력[+10], 지지율[+15] " << endl;
        }
        else {
            player.public_opinion -= 10;
            player.diplomacy -= 10;
            cout << "효과 :  지지율[-10] 외교력[-10] " << endl;
        }
        break;
    case 8:
        if (choice == 1) {
            player.economy -= 35;
            cout << "효과 :  경제력[-35] " << endl;
        }
        else {
            player.public_opinion -= 15;
            player.diplomacy -= 15;
            player.military -= 10;
            cout << "효과 :  지지율[-15], 외교력[-15], 군사력[-10] " << endl;
        }
        break;
    case 9:
        if (choice == 1) {
            player.economy += 15;
            player.diplomacy += 5;
            player.military -= 5;
            cout << "효과 :  경제력[+15], 외교력[+5], 군사력[-5] " << endl;
        }
        else {
            player.economy -= 15;
            player.diplomacy -= 5;
            player.military += 5;
            cout << "효과 :  경제력[-15], 외교력[-5], 군사력[+5] " << endl;
        }
        break;
    case 10:
        if (choice == 1) {
            player.economy -= 10;
            player.diplomacy += 10;
            cout << "효과 :  경제력[-10], 외교력[+10] " << endl;
        }
        else {
            player.economy += 10;
            player.diplomacy -= 10;
            cout << "효과 :  경제력[+10], 외교력[-10]" << endl;
        }
        break;
    }

}

