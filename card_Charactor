void White_bird::applyEffect(Player& player, int choice) {
    switch (card_num14)
    {
    case 0:
        if (choice == 1) {
            player.military -= 25;
            player.economy += 15;
            cout << "효과 :  군사력[+25], 경제력[+15]" << endl;
        }
        else {
            player.public_opinion -= 15;
            player.economy -= 10;
            cout << "효과 :  지지율[-15], 경제력[-10] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {

            cout << "효과없음 " << endl;
            cout << " 찢어진 종이를 발견했다. 뭔가 적혀있었으나 조금밖에 읽을 수 없었다.\"이봐…\"" << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {

            cout << "효과없음 " << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {

            cout << "효과없음 " << endl;
        }
        break;
    }


}

