#include<iostream>
#include "card_Character.h"
using namespace std;


void Rex::applyEffect(Player& player, int choice) {
    if (card_num = 1)
    {
        if (choice == 1) {
            player.military -= 10;
            player.diplomacy -= 10;
            cout << "효과 :  군사력[-10]" << ", 외교력[-10]" << endl;
        }
        else {
            player.military += 0;
            player.diplomacy += 0;
            cout << "효과없음" << endl;
        }
    }
    else
    {
        if (choice == 1)
        {
            player.military -= 0;
            player.diplomacy -= 0;
            cout << "효과 없음" << endl;
        }
        else {
            player.military += 0;
            player.diplomacy += 0;
            cout << "효과없음 " << endl;
        }
    }

}

