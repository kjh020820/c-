void Rex::showEffectPreview()
{
    if (card_num = 0)
    {
        std::cout << "선택지 [1]  :  군사력에 작은 영향" << ", 외교력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  : 알수없음" << std::endl;
    }
    else
    {
        std::cout << "선택지 [1]  : 알수없음" << std::endl;
        std::cout << "선택지 [2]  : 알수없음" << std::endl;
    }

    ;
}


void black_bird::applyEffect(Player& player, int choice) {
    if (card_num2 = 0)
    {
        if (choice == 1) {
            player.economy -= 15;
            cout << "효과 :  경제력[-15] " << endl;
        }
        else {
            cout << "효과 :  효과없음 " << endl;
        }
    }
    else
    {
        if (choice == 1) {
            player.military -= 10;
            player.economy -= 10;
            player.public_opinion += 5;
            cout << "효과 :  군사력[-10] " << "경제력[-10] " << "지지율[+5]" << endl;;
        }
        else {
            player.diplomacy += 5;
            player.economy += 10;
            cout << "효과 :  외교력[+5] " << ", 경제력[+10] " << endl;
        }
    }
}

