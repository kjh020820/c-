void Minister_of_Foreign_Affairs::showEffectPreview() {
    switch (card_num6)
    {
    case 0:
        std::cout << "선택지 [1]  :  경제력에 작은 영향, 지지율에 작은 영향 외교력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향" << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  경제력에 큰 영향, 지지율에 큰 영향, 외교력에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  군사력에 큰 영향, 지지율에 큰 영향, 외교력에 큰 영향" << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  경제력에 큰 영향, 군사력에 큰 영향, 지지율에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  지지율에 큰 영향" << std::endl;
        break;
    case 3:
        std::cout << "선택지 [1]  :  경제력에 작은 영향, 외교력에 큰 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향 " << std::endl;
        break;
    case 4:
        std::cout << "선택지 [1]  :  지지율에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 경제력에 작은 영향" << std::endl;
        break;
    case 5:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향 " << std::endl;
        break;
    case 6:
        std::cout << "선택지 [1]  :  외교력에 큰 영향, 지지율에 작은 영향, 군사력에 작은 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 큰 영향, 지지율에 작은 영향, 군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    case 7:
        std::cout << "선택지 [1]  :  경제력에 작은 영향, 지지율에 작은 영향, 외교력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향 외교력에 작은 영향 " << std::endl;
        break;
    case 8:
        std::cout << "선택지 [1]  :  경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 외교력에 작은 영향, 군사력에 작은 영향 " << std::endl;
        break;
    case 9:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    case 10:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    }

}

void Foreign_Spy::applyEffect(Player& player, int choice) {
    switch (card_num7)
    {
    case 0:
        if (choice == 1) {
            player.diplomacy -= 30;
            player.military += 15;
            player.public_opinion += 15;
            cout << "효과 :  외교력[-30], 군사력[+15], 지지율[+15]" << endl;
        }
        else {
            player.diplomacy += 15;
            cout << "효과 :  외교력[+15]" << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.diplomacy -= 5;
            player.public_opinion += 30;
            cout << "효과 :  외교력[-5], 지지율[+30]" << endl;
        }
        else {
            player.diplomacy += 15;
            player.public_opinion -= 15;
            cout << "효과 :  외교력[+15], 지지율[-15]" << endl;
        }
        break;
    }
}
