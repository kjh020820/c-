void an_aide::applyEffect(Player& player, int choice) {
    switch (card_num5)
    {
    case 0:
        if (choice == 1) {
            player.military += 10;
            player.economy += 10;
            player.diplomacy += 15;
            player.public_opinion += 10;
            cout << "효과 :  군사력[+10], 외교력[+15], 지지율[+10], 경제력[+10] " << endl;
        }
        else {
            player.military += 10;
            player.economy -= 10;
            player.diplomacy - 25;
            cout << "효과 :  군사력[+10], 외교력[-25], 경제력[-10] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.diplomacy += 10;
            cout << "효과 :  외교력[+10]" << endl;
        }
        else {
            player.diplomacy -= 10;
            cout << "효과 :  외교력[-10]" << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.diplomacy += 15;
            player.public_opinion -= 15;
            cout << "효과 :  외교력[+15], 지지율[-15]" << endl;
        }
        else {
            player.diplomacy += 20;
            cout << "효과 :  외교력[+20]" << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.military += 10;
            player.economy += 10;
            player.diplomacy += 10;
            player.public_opinion += 10;
            cout << "효과 :  군사력[+10], 외교력[+10], 지지율[+10], 경제력[+10] " << endl;
        }
        else {
            player.military -= 15;
            player.public_opinion -= 15;
            cout << "효과 :  군사력[-15], 지지율[-15]" << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.military += 5;
            player.public_opinion += 15;
            cout << "효과 :  군사력[+5], 지지율[+15]" << endl;
        }
        else {
            player.military -= 5;
            player.public_opinion -= 10;
            player.economy += 5;
            cout << "효과 :  군사력[-5], 지지율[-10] 경제력[+5]" << endl;
        }
        break;
    case 5:
        if (choice == 1) {
            player.diplomacy += 5;
            player.military += 15;
            player.public_opinion += 25;
            player.economy -= 5;
            cout << "효과 :  군사력[+15], 지지율[+25], 경제력[-5], 외교력[+5]" << endl;
        }
        else {
            player.military -= 5;
            player.public_opinion -= 15;
            player.diplomacy -= 5;
            cout << "효과 :   군사력[-5], 지지율[-15], 외교력[-5]" << endl;
        }
    case 6:
        if (choice == 1) {
            player.diplomacy -= 15;
            player.military += 20;
            player.public_opinion -= 15;
            cout << "효과 :  군사력[+20], 지지율[-15], 외교력[-15]" << endl;
        }
        else {
            player.economy -= 15;
            player.public_opinion += 20;
            cout << "효과 :   지지율[+20], 경제력[-15]" << endl;
        }
    case 7:
        if (choice == 1) {
            player.diplomacy -= 10;
            player.military -= 25;
            cout << "효과 :  군사력[-25], 외교력[-10]" << endl;
        }
        else {
            player.diplomacy -= 25;
            cout << "효과 :   외교력[-25]" << endl;
        }
    }

}

