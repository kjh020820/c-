void Minister_of_Land::showEffectPreview() {
    if (card_num3 = 0)
    {
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 군사력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 큰 영향, 군사력에 작은 영향 " << std::endl;
    }
    else
    {
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향 , 경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 작은 영향" << std::endl;
    }
}

void Minister_of_Agriculture_and_Forest::applyEffect(Player& player, int choice) {
    switch (card_num4)
    {
    case 0:
        if (choice == 1) {
            player.public_opinion -= 35;
            player.economy += 20;
            cout << "효과 :  지지율[-35], 경제력[+20] " << endl;
        }
        else {
            player.economy -= 10;
            cout << "효과 :  경제력[-10] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.public_opinion += 20;
            player.economy -= 25;
            cout << "효과 :  지지율[+20], 경제력[-25] " << endl;
        }
        else {
            player.public_opinion -= 35;
            player.economy += 15;
            cout << "효과 :  지지율[-35], 경제력[+15] " << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.diplomacy -= 15;
            player.public_opinion += 15;
            cout << "효과 :  지지율[+15], 외교력[-15] " << endl;
        }
        else {
            player.diplomacy += 5;
            player.public_opinion -= 15;
            cout << "효과 :  지지율[-15], 외교력[+5] " << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.public_opinion += 20;
            player.military += 15;
            player.diplomacy += 15;
            player.economy -= 25;
            cout << "효과 :  지지율[+20], 경제력[-25], 군사력[+15], 외교력[+15] " << endl;
        }
        else {
            player.public_opinion -= 40;
            cout << "효과 :  지지율[-40] " << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.public_opinion += 15;
            player.economy -= 20;
            cout << "효과 :  지지율[+15], Economy: -20 " << endl;
        }
        else {
            player.public_opinion -= 40;
            cout << "효과 :  지지율[-40] " << endl;
        }
        break;
    case 5:
        if (choice == 1) {
            player.public_opinion += 10;
            player.diplomacy += 10;
            player.military += 10;
            cout << "효과 :  지지율[+10], 외교력[+10], 군사력[+10] " << endl;
        }
        else {
            player.economy += 25;
            cout << "효과 :  경제력[+25] " << endl;
        }
        break;
    case 6:
        if (choice == 1) {
            player.public_opinion -= 30;
            player.economy += 20;
            cout << "효과 :  지지율[-30], 경제력[+20] " << endl;
        }
        else {
            player.public_opinion += 10;
            player.economy -= 5;
            cout << "효과 :  지지율[+10], 경제력[-5] " << endl;
        }
        break;
    case 7:
        if (choice == 1) {
            player.public_opinion += 15;
            player.economy -= 35;
            cout << "효과 :  지지율[+15], 경제력[-35] " << endl;
        }
        else {
            player.public_opinion -= 10;
            cout << "효과 :  지지율[-10] " << endl;
        }
        break;
    case 8:
        if (choice == 1) {
            player.public_opinion += 20;
            player.economy -= 30;
            player.diplomacy -= 15;
            player.military += 10;
            cout << "효과 :  지지율[+20], 경제력[-30], 외교력[-15], 군사력[+10] " << endl;
        }
        else {
            player.diplomacy += 15;
            player.military += 15;
            player.public_opinion -= 25;
            cout << "효과 :  외교력[+15], 군사력[+15], 지지율[-25] " << endl;
        }
        break;
    case 9:
        if (choice == 1) {
            player.public_opinion += 20;
            player.diplomacy -= 5;
            player.military -= 15;
            cout << "효과 :  지지율[+20], 외교력[-5], 군사력[-15] " << endl;
        }
        else {
            player.diplomacy += 30;
            player.public_opinion -= 15;
            player.military += 10;
            cout << "효과 :  외교력[+30], 지지율[-15], 군사력[+10] " << endl;
        }
        break;
    case 10:
        if (choice == 1) {
            player.public_opinion += 10;
            player.military += 10;
            player.diplomacy = +10;
            player.economy += 10;
            cout << "효과 :  지지율[+10], 경제력[+10], 군사력[+10], 외교력[+10] " << endl;
        }
        else {
            player.economy += 30;
            cout << "효과 :  경제력[+30] " << endl;
        }
        break;
    case 11:
        if (choice == 1) {
            player.public_opinion += 10;
            player.economy -= 25;
            cout << "효과 :  지지율[+10], 경제력[-25] " << endl;
        }
        else {
            player.public_opinion -= 15;
            player.economy += 15;
            cout << "효과 :  지지율[-15], 경제력[+15] " << endl;
        }
        break;
    case 12:
        if (choice == 1) {
            player.military -= 10;
            cout << "효과 :  군사력[-10] " << endl;
        }
        else {
            player.public_opinion += 10;
            player.military += 10;
            cout << "효과 :  지지율[+10], 군사력[+10] " << endl;
        }
        break;
    }
}

