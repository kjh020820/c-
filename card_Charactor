void black_bird::showEffectPreview() {
    if (card_num2 = 0)
    {
        std::cout << "선택지 [1]  :  경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  군사력에 큰 영향" << std::endl;
    }
    else
    {
        std::cout << "선택지 [1]  :  경제력에 작은 영향 " << "군사력에 작은 영향" << "지지율에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향 " << "경제력에 작은 영향" << std::endl;
    }

}

void Minister_of_Land::applyEffect(Player& player, int choice) {
    if (card_num3 = 0)
    {
        if (choice == 1) {
            player.diplomacy += 15;
            player.military -= 15;
            cout << "효과 :  군사력[-15] " << "외교력[+15] " << endl;
        }
        else {
            player.diplomacy -= 25;
            player.military += 10;
            cout << "효과 :  군사력[+10] " << ", 외교력[-25] " << endl;
        }
    }
    else
    {
        if (choice == 1) {
            player.economy -= 15;
            player.public_opinion += 15;
            player.diplomacy += 15;
            cout << "효과 :  경제력에 작은 영향 " << ", 지지율[+15] , 외교력[+15] " << endl;
        }
        else {
            player.diplomacy -= 5;
            player.public_opinion -= 5;
            cout << "효과 :  외교력[-5] " << ", 지지율[-5] " << endl;
        }
    }
}

