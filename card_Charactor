    }
}
void General::showEffectPreview() {
    switch (card_num12)
    {
    case 0:
        std::cout << "선택지 [1]  : 알수없음 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향 " << std::endl;
        break;
    case 1:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향 " << std::endl;
        break;
    case 2:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 지지율에 작은 영향, 경제력에 작은 영향" << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향, 지지율에 작은 영향 외교력에 작은 영향, 경제력[적은 효과" << std::endl;
        break;
    case 3:
        std::cout << "선택지 [1]  :  군사력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향 " << std::endl;
        break;
    case 4:
        std::cout << "선택지 [1]  :  군사력에 큰 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향 " << std::endl;
        break;
    case 5:
        std::cout << "선택지 [1]  :  군사력에 큰 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 큰 영향 " << std::endl;
        break;
    case 6:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    case 7:
        std::cout << "선택지 [1]  : 알수없음 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향" << std::endl;
        break;
    case 8:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향, 군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향, 군사력에 작은 영향 " << std::endl;
        break;
    case 9:
        std::cout << "선택지 [1]  :  군사력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향 " << std::endl;
        break;
    case 10:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 큰 영향 " << std::endl;
        break;
    case 11:
        std::cout << "선택지 [1]  :  외교력에 큰 영향, 지지율에 큰 영향, 군사력에 큰 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 큰 영향, 지지율에 큰 영향, 군사력에 큰 영향 " << std::endl;
        break;
    case 12:
        std::cout << "선택지 [1]  :  외교력에 작은 영향, 지지율에 작은 영향 군사력에 작은 영향, 군사력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  외교력에 작은 영향, 지지율에 큰 영향, 군사력에 작은 영향 " << std::endl;
        break;
    case 13:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향, 경제력에 작은 영향 " << std::endl;
        break;
    case 14:
        std::cout << "선택지 [1]  :  지지율에 작은 영향, 군사력에 작은 영향 " << std::endl;
        std::cout << "선택지 [2]  :  지지율에 작은 영향 군사력에 작은 영향 " << std::endl;
        break;
    case 15:
        std::cout << "선택지 [1]  :  군사력에 작은 영향, 경제력에 큰 영향 " << std::endl;
        std::cout << "선택지 [2]  :  군사력에 작은 영향, 경제력에 큰 영향 " << std::endl;
        break;

    }



}
void Rich::applyEffect(Player& player, int choice) {
    switch (card_num13)
    {
    case 0:
        if (choice == 1) {
            player.economy += 10;
            cout << "효과 :  경제력[+10] " << endl;
        }
        else {
            player.diplomacy += 5;
            player.public_opinion += 5;
            cout << "효과 :  외교력[+5], 지지율[+5] " << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.economy += 55;
            cout << "효과 :  경제력[+55] " << endl;
        }
        else {
            player.public_opinion -= 10;
            cout << "효과 :  지지율[-10] " << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.public_opinion -= 15;
            player.economy += 35;
            cout << "효과 :  지지율[-15], 경제력[+35] " << endl;
        }
        else {
            player.public_opinion -= 20;
            player.economy += 15;
            cout << "효과 :  경제력[+15], 지지율[-20] " << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            player.economy += 10;
            cout << "효과 :  경제력[+10] " << endl;
        }
        else {
            player.economy += 10;
            cout << "효과 :  경제력[+10] " << endl;
        }
        break;
    case 4:
        if (choice == 1) {
            player.diplomacy -= 25;
            player.public_opinion -= 25;
            player.economy -= 35;
            player.military - 25;
            cout << "효과 :  외교력[-25], 지지율[-25], 군사력[-25], 경제력[-35] " << endl;
        }
        else {
            player.economy += 50;
            cout << "효과 :  경제력[+50] " << endl;
        }
        break;
    }


}

void Rich::showCard() {
    card_num13 = rand() % 5;
    switch (card_num13)
    {
    case 0:
        cout << ";:;;;;:;;;;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;;;;;;;~~;;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;;;:-. -;;;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;;:-.-- -:;;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;;:,.--~- ,:;;;;;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;;;;:..----~~..:;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;: ,---. ~~~, :;:;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~.----    ~~~~ ::;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~----.     ~~~~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;:---.        ,~~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;~--.          .~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;:-.            .~;;;;;;;;;;;;\n";
        cout << ";::;;;;;;;;;-    ~    -    ~;;;;;;;;;;;;\n";
        cout << ";::;;;;;;;;;-    =.   =    ~;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;-.   =.   =    ~;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;-    *.   *    ~;;;;;;;;;;;;\n";
        cout << ";:;;;;;;;;;;-    .         ~:;;;;;;;;;;;\n";
        cout << ";;;;;;;;:;;;-.             ~;;;;;;;;;;;;\n";
        cout << ";;;;;;;;;:=$!              --~;;;;;;;;;;\n";
        cout << ";;;;;;;;;*##!              ,--~:;::;;;;;\n";
        cout << ";;;;;;;;!$##!.             ,---!;:;;;;;;\n";
        cout << ";;;;;;;!$###!.             ,---==;;;;;;;\n";
        cout << ";;;;;;*$####!.             ,---=#=;;::;;\n";
        cout << ";;;;;*######*.             ----=##=;;;;;\n";
        cout << ";;;;*$$#####$!.           ,----=###$;:;;\n";
