void doctor::applyEffect(Player& player, int choice) {
    switch (card_num10)
    {
    case 0:
        if (choice == 1) {
            player.diplomacy -= 10;
            player.military += 20;
            cout << "효과 :  외교력[-10], 군사력[+20] " << endl;
        }
        else {
            player.diplomacy += 10;
            player.public_opinion += 10;
            cout << "효과 :  외교력[+10], 지지율[+10]" << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            player.public_opinion -= 20;
            player.military += 15;
            player.economy - 20;
            cout << "효과 :  지지율[-20], 군사력[+15], 경제력[-20] " << endl;
        }
        else {
            player.military -= 20;
            player.public_opinion += 10;
            cout << "효과 :  지지율[+10], 군사력[-20]" << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.diplomacy -= 15;
            player.economy += 20;
            cout << "효과 :  외교력[-15], 경제력[+20] " << endl;
        }
        else {
            player.diplomacy += 5;
            cout << "효과 :  외교력[+5]" << endl;
        }
        break;
    }


}

