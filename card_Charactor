void Minister_of_Government::applyEffect(Player& player, int choice) {
    switch (card_num15)
    {
    case 0:
        if (choice == 1) {
            player.public_opinion += 10;
            player.military -= 15;
            cout << "효과 :  지지율[+10], 군사력[-15] " << endl;
        }
        else {
            player.public_opinion -= 15;
            cout << "효과 :  지지율[-15]" << endl;
        }
        break;
    case 1:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {
            cout << "효과없음" << endl;
        }
        break;
    case 2:
        if (choice == 1) {
            player.public_opinion += 15;
            player.economy -= 10;
            cout << "효과 :  지지율[+15], 경제력[-10] " << endl;
        }
        else {
            player.public_opinion -= 5;
            player.economy += 10;
            cout << "효과 :  지지율[-5], 경제력[+10]" << endl;
        }
        break;
    case 3:
        if (choice == 1) {
            cout << "효과없음 " << endl;
        }
        else {
            cout << "효과없음" << endl;
        }
        break;
    }
}

