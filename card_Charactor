        cout << ";:;;;;;;:;;;;;:..----~~..:;;;;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;;: ,---. ~~~, :;:;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~.----    ~~~~ ::;;;;;;;;;;;\n";
        cout << ";::;;;;;:;;;~----.     ~~~~~:;;;;;;;;;;;\n";
        cout << ";:;;;;;;:;;:---.        ,~~~:;;;;;;;;;;;\n";
