void Fortune_Teller::applyEffect(Player& player, int choice) {
    if (choice == 1) {
        player.diplomacy -= 15;
        cout << "효과 :  외교력[-15] " << endl;
    }
    else {
        player.diplomacy += 10;
        player.military += 10;
        cout << "효과 :  외교력[+10], 군사력[+10] " << endl;
    }

}

